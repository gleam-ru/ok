extends ../_layouts/no-title.jade

block prepend head
  link(rel='stylesheet', href="/bower_components/bootstrap-tagsinput/dist/bootstrap-tagsinput.css")
  link(rel='stylesheet', href="/bower_components/alloyeditor/dist/alloy-editor/assets/alloy-editor-atlas-min.css")


block append head
  //- +globalVar('users', users)
  //- +globalVar('roles', roles)
  script(src="/bower_components/bootstrap-tagsinput/dist/bootstrap-tagsinput.js")
  script(src="/bower_components/alloyeditor/dist/alloy-editor/alloy-editor-all-min.js")
  script(src='/ViewControllers/admin/edit.js')
  style.
    :focus {
      outline: none !important;
      outline-color: transparent;
      outline-style: none;
      -webkit-appearance: none;
      }
    #zone {
      margin-bottom: 10px;
      padding: 10px;
      width: 100%; height: 100%;
      border: solid 1px rgba(0,0,0, 0.2);
      min-height: 100px;
      overflow: hidden;
      }
    #ckimgrsz * {
      transition: none;
      -moz-transition: none;
      -webkit-transition: none;
      -o-transition: none;
      }

    #zone ul li {
      list-style: initial;
      margin-left: 30px;
      }

block content
  section.wow.fadeIn
    .container
      input#id.hidden(
        value=post.id
        )
      input#name(
        placeholder='Post title'
        value=post.title
        )
      input#tags(
        placeholder='type some tags'
        value=post.tags
        )
      #zone
        | !{post.text}
      a#save(href='#')
        +revealButton('fa-save', 'Save')


