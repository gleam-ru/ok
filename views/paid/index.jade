extends ../_layouts/black-subtitle.jade
//- blog-grid-3columns.html

block append head
  //- +globalVar('users', users)
  //- +globalVar('roles', roles)
  //- script(src='/ViewControllers/index.js')
  style.
    .blog-image {height: 180px; position: relative;}




mixin post(post)
  .col-md-4.col-sm-6.col-xs-6.blog-listing.wow.fadeInUp(data-wow-duration='300ms')
    .blog-title
      a(href='#{post.url || "/"}') #{post.title || 'Noname'}
    .blog-image
      a(href='#{post.url || "/"}')
        img(src='images/paid/#{post.image || "no_image.jpg"}', alt='')
    .mb-10
    .blog-details
      .blog-short-description !{post.description || ''}


block content
  section.wow.fadeIn
    .container
      .row.blog-3col
        for tile in tiles
          +post(tile)
      //- +pagination()
