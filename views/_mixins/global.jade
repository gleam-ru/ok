include ../_client/els.jade

mixin json(data)
  p #{JSON.stringify(data, null, 4)}

//- вставка данных в тело страницы в виде скрипта,
//- args == ["name", {data}]
mixin PasteInlineData(args)
  - name = args[0]
  - data = args[1]
  if (typeof name !== 'undefined' && typeof data !== 'undefined')
    script.
      window["#{name}"] = !{JSON.stringify(data).replace(/<\//g, "<\\/")};

mixin error(data)
  .g-alert.type_error.with_close.ib.error
    .g-alert-body #{data}

mixin info(data)
  .g-alert.type_success.with_close.ib
    .g-alert-body #{__('Data_updated')}

//- TODO: deprecated
mixin separator()
  div.separator
